package sort;
import java.util.Scanner;
public class star {
	public static void main(String args[]) {
		int n, i, j;
		Scanner ss = new Scanner(System.in);
		System.out.println("Enter the number:");
		n = ss.nextInt();
		for (i = 1; i <= n; i++) {
			for (j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		for (i = n; i >=0; i--) {
			for (j = i-1; j >0; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
}
