#include <iostream>
using namespace std;
int main()
{
    int n,i,a[10],pos,m;
    cout<<"Enter the size : ";
    cin>>n;
    cout<<"Enter the elements : ";
    for(i=0;i<n;i++)
        cin>>a[i];
    cout<<"Input the value to be inserted : ";
    cin>>m;
    cout<<"Input the Position, where the value to be inserted : ";
    cin>>pos;
    cout<<"The current list of the array :"<<endl;
    for(i=0;i<n;i++)
        cout<<a[i]<<"\t";
    for(i=n;i>=pos;i--)
    {
        a[i] = a[i-1];                             //Pushing previous elements to their successive indices
    }
    a[i] = m;
    n++;                                          //Final array size will be one greater than previous size
    cout<<"\nAfter Insert the element the new list is :"<<endl;
    for(i=0;i<n;i++)
        cout<<a[i]<<"\t";
}
