#include <iostream>
using namespace std;
int main() {
int n,k;
    cout<<"Enter a number to form the pattern ";
    cin>>n;
    for (int i = 0; i < n; i++)
    {   k=n-i;
        for(int j=0;j<=i;j++){
        while(k>0){
            cout<<" ";
            k--;
            }
        cout<<"* ";}
       cout<<endl;    
    }
   
     for (int i = n; i > 0; i--)
    {  
       k=n-i;
        for(int j=i;j>0;j--){
        
        while(k>0){
                cout<<" ";
                k--;
            }
        cout<<" *";}//See how we have space is give.
        cout<<endl;
    }
    return 0;
  
}
