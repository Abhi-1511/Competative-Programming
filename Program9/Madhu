
#include<iostream>
#include <algorithm>
using namespace std;

int main(){
    int nums[]={3,2,1,3,2,5,5,6,4};
    int n=sizeof(nums)/sizeof(nums[0]);
    sort(nums,nums+n);
    int k,ans;
    cout<<"Enter the value of 'k':";
    cin>>k;
    ans=nums[n-k];
    cout<<k<<"th largest ele is:"<<ans;
    return 0;
}
