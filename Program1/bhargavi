// Online C++ compiler to run C++ program online
#include<iostream>
using namespace std;
int main()
{
    int a[10],min,max,n;
    cout<<"Enter the number of elements:";
    cin>>n;
    cout<<"Enter the array elements:";
    for(int i=0;i<n;i++)
    cin>>a[i];
    max=a[0];
    for(int i=1;i<n;i++)
    {
        if(a[i]>max)
        max=a[i];
    
    }
    min=a[0];
    for(int i=1;i<n;i++)
    {
        if(a[i]<min)
        min=a[i];
    }
    cout<<"The largest in the array is:"<<max<<endl;
    cout<<"The smallest in the array is:"<<min;
    return 0;
}
