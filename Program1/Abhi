#include<iostream>
using namespace std;
int main()
{
    int i,n,a[10],max,min;
    cout<<"Enter the size of the array:";
    cin>>n;
    cout<<"Enter the array elements:";
    for(i=0;i<n;i++){
        cin>>a[i];
    }
    max=a[0];
    for(i=0;i<n;i++){
        if(a[i]>max)
        max=a[i];
    }
    cout<<"Maximum element is:"<<max<<endl;
    min=a[0];
    for(i=0;i<n;i++){
        if(a[i]<min)
        min=a[i];
    }
    cout<<"Minimum element is:"<<min;
}
